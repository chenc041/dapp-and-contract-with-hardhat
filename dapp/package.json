{
  "name": "dapp",
  "version": "1.0.0",
  "license": "MIT",
  "author": "chenc",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --config config/webpack.dev.conf.ts",
    "build": "pnpm run clean && cross-env NODE_ENV=production webpack --config config/webpack.prod.conf.ts",
    "analyzer": "cross-env ANALYZER=true webpack --config config/webpack.prod.conf.ts",
    "clean": "rimraf ./dist",
    "prebuild": "pnpm run clean",
    "lint-staged": "lint-staged",
    "lint-staged:tsx": "tsc --noEmit && eslint --fix 'src/**/**/*.{js,ts,tsx}'",
    "prettier": "prettier --write src/**/**/*.tsx"
  },
  "browserslist": [
    "cover 99.5% in CN"
  ],
  "dependencies": {
    "@tanstack/react-query": "^5.25.0",
    "axios": "^1.6.7",
    "core-js": "^3.36.0",
    "postcss": "^8.4.35",
    "postcss-loader": "^8.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^6.22.2",
    "tailwindcss": "^3.4.1",
    "viem": "2.x",
    "wagmi": "^2.5.7"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.23.3",
    "@babel/runtime": "^7.24.0",
    "@types/html-webpack-plugin": "^3.2.9",
    "@types/node": "^20.11.25",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/react-helmet": "^6.1.11",
    "@types/webpack": "^5.28.5",
    "@types/webpack-bundle-analyzer": "^4.7.0",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "assert": "^2.1.0",
    "autoprefixer": "^10.4.18",
    "babel-loader": "^9.1.3",
    "browserify-zlib": "^0.2.0",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.0",
    "css-loader": "^7.0.0",
    "cssnano": "^6.1.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "https-browserify": "^1.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "mini-css-extract-plugin": "^2.8.1",
    "prettier": "^3.2.5",
    "progress-bar-webpack-plugin": "^2.1.0",
    "rimraf": "^5.0.5",
    "sass": "^1.71.1",
    "sass-loader": "^14.1.1",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "style-loader": "^4.0.0",
    "stylelint": "^16.2.1",
    "stylelint-config-recommended": "^14.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.4.2",
    "url": "^0.11.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.90.3",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.2",
    "webpack-merge": "^5.10.0"
  },
  "lint-staged": {
    "src/**/**/*.tsx": [
      "prettier --write",
      "git add"
    ],
    "**/**/*.tsx": [
      "prettier --write",
      "git add"
    ],
    "**/*.tsx": "npm run lint-staged:tsx"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  }
}
